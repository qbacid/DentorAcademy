@using Dentor.Academy.Web.DTOs
@using Dentor.Academy.Web.DTOs.Quiz
@inject NavigationManager Navigation

<div class="row g-4">
    @foreach (var quiz in Quizzes)
    {
        <div class="col-sm-6 col-lg-4">
            <div class="card border-0 shadow-sm h-100 quiz-card" 
                 role="button" 
                 tabindex="0"
                 @onclick="() => OnQuizSelected.InvokeAsync(quiz.Id)"
                 @onkeydown="(e) => CardKeyDown(e, quiz.Id)">
                
                <div class="card-body d-flex flex-column">
                    <div class="mb-2">
                        <span class="badge bg-primary-subtle text-primary">
                            <i class="bi bi-folder me-1"></i>@(quiz.Category ?? "General")
                        </span>
                    </div>
                    
                    <h5 class="card-title quiz-title mb-2">@quiz.Title</h5>
                    
                    @if (!string.IsNullOrWhiteSpace(quiz.Description))
                    {
                        <p class="card-text quiz-description text-muted mb-3">@quiz.Description</p>
                    }
                    else
                    {
                        <p class="card-text quiz-description text-muted fst-italic mb-3">No description provided.</p>
                    }
                    
                    <div class="quiz-meta text-muted small mb-3 pb-3 border-top pt-3">
                        <div class="d-flex align-items-center gap-3 flex-wrap">
                            <span><i class="bi bi-question-circle me-1"></i> @quiz.QuestionCount question@(quiz.QuestionCount == 1 ? "" : "s")</span>
                            @if (quiz.TimeLimitMinutes.HasValue)
                            {
                                <span><i class="bi bi-clock me-1"></i> @quiz.TimeLimitMinutes min</span>
                            }
                            <span><i class="bi bi-trophy me-1"></i> Pass @quiz.PassingScore%</span>
                        </div>
                    </div>
                    
                    <div class="mt-auto">
                        <button class="btn btn-primary w-100" @onclick="() => OnQuizSelected.InvokeAsync(quiz.Id)">
                            <i class="bi bi-play-circle me-1"></i> Start Quiz
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public List<QuizCardDto> Quizzes { get; set; } = new();

    [Parameter]
    public EventCallback<int> OnQuizSelected { get; set; }

    [CascadingParameter]
    private Task<AuthenticationState>? AuthenticationState { get; set; }

    private void CardKeyDown(KeyboardEventArgs e, int quizId)
    {
        if (e.Key == "Enter" || e.Key == " ")
        {
            OnQuizSelected.InvokeAsync(quizId);
        }
    }
}
