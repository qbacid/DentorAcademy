@using Dentor.Academy.Web.DTOs.Quiz
@using Dentor.Academy.Web.Interfaces
@using Microsoft.AspNetCore.Components.Forms

@inject IQuizManagementService QuizManagementService
@inject IJSRuntime JS

<div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Manage Questions - @QuizTitle</h5>
                <button type="button" class="btn-close" @onclick="OnClose"></button>
            </div>
            <div class="modal-body" style="max-height: 80vh; overflow-y: auto;">
                
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6>Questions (@questions.Count)</h6>
                    <button class="btn btn-sm btn-success" @onclick="AddNewQuestion">
                        <i class="bi bi-plus-circle"></i> Add Question
                    </button>
                </div>

                @if (isLoading)
                {
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary"></div>
                    </div>
                }
                else if (!questions.Any())
                {
                    <div class="alert alert-info">
                        No questions yet. Click "Add Question" to create your first question.
                    </div>
                }
                else
                {
                    <div class="list-group">
                        @foreach (var question in questions)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            <span class="badge bg-primary">Q@(question.OrderIndex + 1)</span>
                                            <span class="badge bg-secondary">@question.QuestionType</span>
                                            <span class="badge bg-info">@question.Points pts</span>
                                        </div>
                                        <p class="mb-2"><strong>@question.QuestionText</strong></p>
                                        
                                        @if (question.AnswerOptions.Any())
                                        {
                                            <div class="ms-3">
                                                @foreach (var option in question.AnswerOptions)
                                                {
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" 
                                                               checked="@option.IsCorrect" disabled />
                                                        <label class="form-check-label @(option.IsCorrect ? "text-success fw-bold" : "")">
                                                            @option.OptionText
                                                        </label>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" @onclick="() => EditQuestion(question)">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button class="btn btn-outline-danger" @onclick="() => DeleteQuestion(question)">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger mt-3">@errorMessage</div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="OnClose">Close</button>
            </div>
        </div>
    </div>
</div>

@if (showQuestionEditor)
{
    <QuestionEditor 
        Question="editingQuestion"
        QuizId="QuizId"
        OnSave="SaveQuestion"
        OnCancel="CloseQuestionEditor" />
}

@code {
    [Parameter] public int QuizId { get; set; }
    [Parameter] public string QuizTitle { get; set; } = "";
    [Parameter] public EventCallback OnClose { get; set; }

    private List<QuestionManagementDto> questions = new();
    private bool isLoading = true;
    private bool showQuestionEditor = false;
    private string? errorMessage;
    private QuestionManagementDto? editingQuestion;

    protected override async Task OnInitializedAsync()
    {
        await LoadQuestions();
    }

    private async Task LoadQuestions()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            questions = await QuizManagementService.GetQuestionsByQuizIdAsync(QuizId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading questions: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void AddNewQuestion()
    {
        editingQuestion = new QuestionManagementDto
        {
            QuizId = QuizId,
            QuestionType = "MultipleChoice",
            Points = 1.0m,
            OrderIndex = questions.Count,
            AnswerOptions = new List<AnswerOptionDto>
            {
                new() { OptionText = "", IsCorrect = false, OrderIndex = 0 },
                new() { OptionText = "", IsCorrect = false, OrderIndex = 1 }
            }
        };
        showQuestionEditor = true;
    }

    private void EditQuestion(QuestionManagementDto question)
    {
        editingQuestion = question;
        showQuestionEditor = true;
    }

    private async Task SaveQuestion(QuestionUpdateDto questionDto)
    {
        try
        {
            if (editingQuestion?.Id > 0)
            {
                // Update existing
                await QuizManagementService.UpdateQuestionAsync(editingQuestion.Id, questionDto);
            }
            else
            {
                // Create new
                await QuizManagementService.CreateQuestionAsync(QuizId, questionDto);
            }

            await LoadQuestions();
            CloseQuestionEditor();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving question: {ex.Message}";
        }
    }

    private void CloseQuestionEditor()
    {
        showQuestionEditor = false;
        editingQuestion = null;
    }

    private async Task DeleteQuestion(QuestionManagementDto question)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm",
            $"Are you sure you want to delete this question? This action cannot be undone.");

        if (!confirmed) return;

        try
        {
            await QuizManagementService.DeleteQuestionAsync(question.Id);
            await LoadQuestions();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting question: {ex.Message}";
        }
    }
}
