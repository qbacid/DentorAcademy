@inherits LayoutComponentBase

<div class="page layout-with-sidebar">
    <!-- Mobile top bar with hamburger button -->
    <div class="mobile-topbar">
        <button class="mobile-hamburger" @onclick="ToggleMenu" aria-label="Toggle menu">
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
            <span class="hamburger-line"></span>
        </button>
        <span class="mobile-title">Luxadent Pro</span>
    </div>

    <aside class="sidebar @(menuOpen ? "open" : "")">
        <NavMenu OnMenuToggle="ToggleMenu" IsOpen="menuOpen" />
    </aside>

    <!-- Mobile overlay -->
    @if (menuOpen)
    {
        <div class="sidebar-overlay" @onclick="CloseMenu"></div>
    }

    <main>
        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool menuOpen = false;

    private void ToggleMenu()
    {
        menuOpen = !menuOpen;
    }

    private void CloseMenu()
    {
        menuOpen = false;
    }
}
